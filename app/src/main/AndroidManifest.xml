<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.srs.foodrunner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/foodapp3"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:resizeableActivity="false"
        android:roundIcon="@drawable/foodapp3"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodRunner">
        <activity android:name=".activity.OrderConfirmationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FoodRunner.NoActionBar" />
        <activity
            android:name=".activity.CartDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FoodRunner.NoActionBar" />
        <activity
            android:name=".activity.RestaruantDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FoodRunner.NoActionBar" />
        <activity android:name=".activity.ConfirmForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FoodRunner.NoActionBar"/>
        <activity
            android:name=".activity.HomePageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FoodRunner.NoActionBar" />
        <activity
            android:name=".activity.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FoodRunner.NoActionBar" />
        <activity
            android:name=".activity.RegistrationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FoodRunner.NoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FoodRunner.NoActionBar" />
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FoodRunner.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>