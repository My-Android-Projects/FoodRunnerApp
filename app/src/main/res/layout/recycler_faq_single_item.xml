<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:id="@+id/llContent">
            <TextView
                android:id="@+id/tv_faq_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q.1. What are Food Hygiene Ratings?"
                android:layout_marginTop="18dp"
                android:textSize="18sp"
                android:textColor="#FF0000"/>
          <TextView
            android:id="@+id/tv_faq_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A.1. The Hygiene Ratings system will help consumers choose where to eat from by giving them information about the hygiene standards. It isn’t easy to judge hygiene standards by appearances alone, so the rating gives you some idea of what’s going on in the kitchen, or behind closed doors"
            android:layout_marginTop="18dp"
            android:textSize="14sp"
            android:textColor="#000000"/>





    </LinearLayout>
</androidx.cardview.widget.CardView>